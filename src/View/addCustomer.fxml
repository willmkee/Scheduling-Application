<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="420.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.addCustomerController">
    <children>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" spacing="10.0" style="-fx-border-style: solid; -fx-border-color: black; -fx-border-radius: 10;">
            <children>
                <Label fx:id="addCustomerLabel" alignment="CENTER" contentDisplay="TOP" text="Add Customer">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addCustomerIdLabel" minWidth="-Infinity" prefWidth="87.0" text="Customer ID" />
                        <TextField fx:id="addCustomerIdTextField" disable="true" editable="false" minWidth="-Infinity" prefWidth="158.0" promptText="Auto-Generated" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addCustomerNameLabel" minWidth="-Infinity" prefWidth="87.0" text="Customer Name" />
                        <TextField fx:id="addCustomerNameTextField" minWidth="-Infinity" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addAddressLabel" minWidth="-Infinity" prefHeight="17.0" prefWidth="87.0" text="Address" />
                        <TextField fx:id="addAddressTextField" minWidth="-Infinity" prefHeight="25.0" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addPostalCodeLabel" minWidth="-Infinity" prefWidth="87.0" text="Postal Code" />
                        <TextField fx:id="addPostalCodeTextField" minWidth="-Infinity" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addPhoneNumberLabel" minWidth="-Infinity" prefWidth="87.0" text="Phone Number" />
                        <TextField fx:id="addPhoneNumberTextField" minWidth="-Infinity" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addCountryLabel" minWidth="-Infinity" prefWidth="87.0" text="Country" />
                        <ComboBox fx:id="addCountryComboBox" minWidth="-Infinity" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="addStateProvinceLabel" minWidth="-Infinity" prefWidth="87.0" text="State/Province" />
                        <ComboBox fx:id="addStateProvinceComboBox" minWidth="-Infinity" prefWidth="158.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
                    <children>
                        <Button fx:id="addSaveChangesButton" mnemonicParsing="false" onAction="#onAddSaveChanges" text="Save Changes" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
